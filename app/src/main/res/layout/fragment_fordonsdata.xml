<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        style="@style/MaterialCardView">

    <!--
    	• Modellår	= sträng
	Fordonsår	= sträng
	Fordonstyp	= sträng
	Reg	= sträng
	Vin	= sträng
	Status	= sträng
	Färg 	= sträng
	Kaross	= sträng
-->

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include
                layout="@layout/view_compare_text_include"
                android:id="@+id/view_vehicle_model_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="28dp">
        </include>

        <include
                layout="@layout/view_compare_text_include"
                android:id="@+id/view_vehicle_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/view_vehicle_model_year"
                app:layout_constraintStart_toStartOf="@+id/view_vehicle_model_year">
        </include>

        <include
                layout="@layout/view_compare_text_include"
                android:id="@+id/view_vehicle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/view_vehicle_year"
                app:layout_constraintStart_toStartOf="@+id/view_vehicle_year">
        </include>

        <include
                layout="@layout/view_compare_text_include"
                android:id="@+id/view_vehicle_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/view_vehicle_type"
                app:layout_constraintStart_toStartOf="@+id/view_vehicle_type">
        </include>

        <include
                layout="@layout/view_compare_text_include"
                android:id="@+id/view_vehicle_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/view_vehicle_status"
                app:layout_constraintStart_toStartOf="@+id/view_vehicle_status">
        </include>
        <include
                layout="@layout/view_compare_text_include"
                android:id="@+id/view_vehicle_chassi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/view_vehicle_color"
                app:layout_constraintStart_toStartOf="@+id/view_vehicle_color">
        </include>
        <include
                layout="@layout/view_compare_text_include"
                android:id="@+id/view_vehicle_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/view_vehicle_chassi"
                app:layout_constraintStart_toStartOf="@+id/view_vehicle_chassi">
        </include>


    </android.support.constraint.ConstraintLayout>

</android.support.design.card.MaterialCardView>