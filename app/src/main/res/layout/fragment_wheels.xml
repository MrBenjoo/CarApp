                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/gl_tire_middle" />

            <TextView
                android:id="@+id/tv_tire_model_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:letterSpacing="0.1"
                android:text="TextView"
                android:textColor="@color/colorBlack300"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/gl_tire_middle" />

            <View
                android:id="@+id/view_tire_vertical_2"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorBlack400"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tire_model_2" />

            <TextView
                android:id="@+id/tv_tire_desc_back_2"
