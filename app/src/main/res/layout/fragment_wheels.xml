                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:letterSpacing="0.1"
                android:text="@string/title_compare_tire_back"
                android:textColor="@color/colorBlack400"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/view_tire_vertical_2"
