                app:layout_constraintStart_toEndOf="@+id/tv_tire_desc_back_2"
                app:layout_constraintTop_toTopOf="@+id/tv_tire_desc_back_2" />

            <TextView
                android:id="@+id/tv_tire_desc_front_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.1"
                android:text="@string/title_compare_tire_front"
                android:textColor="@color/colorBlack400"
