<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_saved_row"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_row">

    <TextView
        android:id="@+id/tv_saved_reg"
        style="@style/CardViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxEms="6"
        android:text="XEF580"
        android:textColor="#4FE3C1"
        app:layout_constraintBottom_toTopOf="@+id/guideline_saved_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_saved_const_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="techModel"
        android:textColor="@color/colorBlack400"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_saved_model"
        app:layout_constraintEnd_toStartOf="@+id/guideline_saved_vertical_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_saved_horizontal" />

    <TextView
        android:id="@+id/tv_saved_model"
        style="@style/CardViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Volvo v70"
        android:textColor="@color/colorBlack200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_saved_vertical_1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_saved_const_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="year"
        android:textColor="@color/colorBlack400"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_saved_year"
        app:layout_constraintEnd_toStartOf="@+id/guideline_saved_vertical_2"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/guideline_saved_vertical_1"
        app:layout_constraintTop_toTopOf="@+id/guideline_saved_horizontal" />


    <TextView
        android:id="@+id/tv_saved_year"
        style="@style/CardViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="2018"
        android:textColor="@color/colorBlack200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_saved_vertical_2"
        app:layout_constraintStart_toStartOf="@+id/guideline_saved_vertical_1" />

    <TextView
        android:id="@+id/tv_saved_const_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="type"
        android:textColor="@color/colorBlack400"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_saved_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/guideline_saved_vertical_2"
        app:layout_constraintTop_toTopOf="@+id/guideline_saved_horizontal" />

    <TextView
        android:id="@+id/tv_saved_type"
        style="@style/CardViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Personbil"
        android:textColor="@color/colorBlack200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_saved_vertical_2" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_saved_vertical_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6607595" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_saved_vertical_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_saved_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

</android.support.constraint.ConstraintLayout>