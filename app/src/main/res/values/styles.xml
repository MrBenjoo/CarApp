<resources>


    <!-- ************** Base application theme ************** -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/bg_main</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_menu_arrow_back</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_mode_clear</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <!-- **************************************************** -->

    <!-- ************** CardView ************** -->
    <style name="CardViewStyle" parent="Base.CardView">
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="CardViewText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- **************************************** -->


    <!-- ************** SearchView ************** -->
    <style name="Theme.SearchView" parent="Theme.AppCompat">
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:inputType">textCapCharacters</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>
    <!-- **************************************** -->


    <!-- ************** TabLayout ************** -->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/colorBlack400</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabBackground">?attr/colorPrimary</item>
    </style>
    <!-- **************************************** -->


    <style name="TitleCompare">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack300</item>
    </style>

    <style name="CarCompare">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack400</item>
    </style>

    <style name="CarCompareVal">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="VerticalLine">
        <item name="android:background">@color/colorBlack400</item>
    </style>

    <style name="MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/colorBlack400</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">#1E252F</item>
        <item name="cardCornerRadius">10dp</item>
    </style>


    <style name="SmartTabLayout">
        <item name="stl_defaultTabTextColor">#FFFFFF</item>
        <item name="stl_defaultTabTextHorizontalPadding">18dp</item>
        <item name="stl_dividerColor">@android:color/transparent</item>
        <item name="stl_dividerThickness">0dp</item>
        <item name="stl_indicatorAlwaysInCenter">true</item>
        <item name="stl_indicatorColor">@color/colorBlack600</item>
        <item name="stl_indicatorCornerRadius">18dp</item>
        <item name="stl_indicatorGravity">center</item>
        <item name="stl_indicatorInterpolation">smart</item>
        <item name="stl_indicatorThickness">36dp</item>
        <item name="stl_underlineColor">@android:color/transparent</item>
        <item name="stl_underlineThickness">0dp</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/colorBlack100</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/dialog_delete_car</item>
    </style>


</resources>
